{
  "name": "arcon.js",
  "version": "2.0.27",
  "description": "An RCON client library for Arma III",
  "license": "MIT",
  "keywords": [
    "rcon",
    "arma"
  ],
  "author": "JonesBryan",
  "homepage": "https://github.com/C4GDevs/arcon.js",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "index.js",
    "index.d.ts",
    "client/**/*",
    "commandManager/**/*",
    "packetManager/**/*",
    "playerManager/**/*"
  ],
  "scripts": {
    "clean": "rm -rf packetManager && rm -rf playerManager && rm -rf index.d.ts && rm -rf index.js && rm -rf client && rm -rf commandManager",
    "test": "mocha -r ts-node/register 'tests/**/*.ts' --exit",
    "lint": "prettier --check . && eslint src",
    "prepublishOnly": "npm run clean && npm run lint && npm run test && tsc",
    "postpublish": "npm run clean",
    "dev": "ts-node tests/index.ts"
  },
  "devDependencies": {
    "@types/buffer-crc32": "^0.2.0",
    "@types/chai": "^4.3.0",
    "@types/lodash": "^4.14.186",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "chai": "^4.3.4",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-deprecation": "^1.3.2",
    "eslint-plugin-prettier": "^4.0.0",
    "mocha": "^9.2.0",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "buffer-crc32": "^0.2.13",
    "lodash": "^4.17.21"
  }
}
