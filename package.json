{
  "name": "arcon.js",
  "version": "6.0.0",
  "description": "An RCON client library for Arma III",
  "license": "MIT",
  "keywords": [
    "rcon",
    "battleye",
    "arma",
    "arma3"
  ],
  "author": "JonesBryan",
  "homepage": "https://github.com/C4GDevs/arcon.js",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "index.js",
    "index.d.ts",
    "Arcon/**/*"
  ],
  "scripts": {
    "clean": "rimraf Arcon index.d.ts index.js",
    "test": "npm run lint && mocha -r ts-node/register 'tests/unit/**/*.ts' --exit",
    "lint": "prettier --check . && eslint src",
    "prepublishOnly": "npm run clean && npm run test && tsc",
    "postpublish": "npm run clean",
    "dev": "npx ts-node tests/live.ts"
  },
  "devDependencies": {
    "@types/chai": "^5.0.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.0",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "chai": "^5.1.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-deprecation": "^3.0.0",
    "eslint-plugin-prettier": "^5.2.1",
    "mocha": "^10.8.2",
    "prettier": "^3.4.1",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "buffer-crc32": "^1.0.0"
  }
