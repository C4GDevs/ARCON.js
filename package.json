{
  "name": "arcon.js",
  "version": "5.2.5",
  "description": "An RCON client library for Arma III",
  "license": "MIT",
  "keywords": [
    "rcon",
    "battleye",
    "arma",
    "arma3"
  ],
  "author": "JonesBryan",
  "homepage": "https://github.com/C4GDevs/arcon.js",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "index.js",
    "index.d.ts",
    "Arcon/**/*"
  ],
  "scripts": {
    "clean": "rimraf Arcon index.d.ts index.js",
